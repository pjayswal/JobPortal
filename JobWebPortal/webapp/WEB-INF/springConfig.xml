<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
		xmlns="http://www.springframework.org/schema/security"
 		xmlns:beans="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	 <http >
	 		<intercept-url pattern="/index.jsp" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
			<intercept-url pattern="/login.jsp" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
			<intercept-url pattern="/loginfailed" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
			<intercept-url pattern="/index.html" access="ROLE_USER"/>
			<intercept-url pattern="/books" access="ROLE_USER"/>
			<intercept-url pattern="/cars" access="ROLE_USER"/>
			<form-login login-page="/login.jsp" authentication-failure-url="/login.jsp" default-target-url="/index.html"/>
			<logout logout-success-url="/login.jsp" delete-cookies="JSESSIONID"/>
		</http> 
	<global-method-security secured-annotations="enabled"></global-method-security>
	<beans:bean id="webexpressionHandler" class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler" />
	
	
	<authentication-manager>
		<authentication-provider>
			<user-service>
				<user name="test"  password="test"  authorities="ROLE_USER"/>
				<user name="yasir"  password="yasir"  authorities="ADMIN_USER,ROLE_USER"/>
			</user-service>
		</authentication-provider>
	</authentication-manager>

</beans:beans>
